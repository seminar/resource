<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mts_audio_info"
    android:layout_width="267dp"
    android:layout_height="35dp"
    android:gravity="center" >

    <TextView
        android:id="@+id/mts_audio_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:textColor="@drawable/mts_audio_text"
        android:textSize="10dp" />

    <ImageView
        android:id="@+id/mts_audio_info_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:src="@drawable/mts_audio_mpeg" />

    <ImageView
        android:id="@+id/mts_audio_info_type_iso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:src="@drawable/mts_audio_vi" 
        android:visibility="invisible"/>

    <ImageView
    	android:id="@+id/mts_audio_info_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:src="@drawable/mts_audio_left" />

    <ImageView
    	android:id="@+id/mts_audio_info_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mts_audio_right" />

</LinearLayout>