<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:orientation="vertical">

	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@string/update_loading"
		android:textSize="20sp" />
	<LinearLayout android:layout_width="260dip"
		android:layout_height="wrap_content" android:orientation="horizontal">

		<ProgressBar android:id="@+id/update_progressBar"

			style="?android:attr/progressBarStyleHorizontal"
			android:layout_width="200dip" android:layout_height="wrap_content" />
		<TextView android:id="@+id/update_textview"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textSize="18sp" />

	</LinearLayout>

</LinearLayout>